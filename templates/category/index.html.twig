{% extends 'base.html.twig' %}

{% block title %}Категории{% endblock %}

{% block body %}
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Название</th>

        </tr>
        {% for categor in category %}
            <tr>
                <td>{{ categor.id }} </td>
                <td><a href="{{ path('category_show',{id:categor.id}) }}">{{ categor.name }} </a></td>
                 </tr>
        {% endfor %}
    </table>
{% endblock %}

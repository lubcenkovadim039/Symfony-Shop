{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <div class="row">
            <div class="col-10">
                <h1>Hello {{ controller_name }}! ✅</h1>
                <img src="{{ asset('image/000000843.jpg') }}" width="300">


                This friendly message is coming from:
                <ul>
                    <li>Your controller at <code>src/Controller/DefaultController.php</code></li>
                    <li>Your template at <code>templates/default/index.html.twig</code></li>
                </ul>
                <a href="{{ path('show',{id:'new-link-from-index'}) }}">Перейти на show</a>
            </div>
            <div class="col-2">
                {% for product in isTop %}

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <a href="{{ path('product_show', {id:product.id}) }}">
                                    <img class="card-top" src="{{ asset(product.image ) }}" alt="{{ product.title }}">

                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
